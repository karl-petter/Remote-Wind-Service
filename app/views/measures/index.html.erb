  </tr>

<% @measures.each do |measure| %>
  <tr>
    <td><%= measure.speed %></td>
    <td><%= measure.direction %></td>
    <td><%= link_to 'Show', measure %></td>
    <td><%= link_to 'Edit', edit_measure_path(measure) %></td>
    <td><%= link_to 'Destroy', measure, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

